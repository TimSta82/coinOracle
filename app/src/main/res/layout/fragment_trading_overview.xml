<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trading_background">

    <CheckBox
        android:id="@+id/purchase_Rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="purchased"
        app:layout_constraintEnd_toStartOf="@id/sold_Rb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/sold_Rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sold"
        app:layout_constraintEnd_toStartOf="@id/asc_Rb"
        app:layout_constraintStart_toEndOf="@+id/purchase_Rb"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/asc_Rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASC"
        app:layout_constraintEnd_toStartOf="@id/desc_Rb"
        app:layout_constraintStart_toEndOf="@+id/sold_Rb"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/desc_Rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/asc_Rb"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trading_Rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchase_Rb"
        tools:listitem="@layout/list_item_trade" />

</androidx.constraintlayout.widget.ConstraintLayout>